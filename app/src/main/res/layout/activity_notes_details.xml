<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forzo.holdMyCard.ui.activities.notesdetail.NotesDetailsActivity">

    
    <EditText
        android:id="@+id/note_des"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:background="@drawable/mylibrary_bg"
        android:padding="8dp"
        android:textSize="18sp"
        android:gravity="start"
        android:maxLength="250"
        android:hint="Please enter your content"
        android:layout_margin="16dp"/>


    <Button
        android:id="@+id/save_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_bg"
        android:text="Save note"
        android:textAllCaps="false" />

    <include layout="@layout/snippet_update_delete" />

    
</RelativeLayout>
