<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forzo.holdMyCard.ui.activities.remainderdetails.RemainderDetailsActivity">


    <EditText
        android:id="@+id/remain_des"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_margin="16dp"
        android:background="@drawable/mylibrary_bg"
        android:elevation="8dp"
        android:gravity="start"
        android:hint="Please enter your content"
        android:padding="8dp"
        android:textSize="18sp"
        tools:targetApi="lollipop" />

    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remain_des"
        android:layout_margin="16dp"
        android:background="@drawable/mylibrary_bg"
        android:elevation="8dp"
        android:padding="4dp"
        android:weightSum="2"
        tools:targetApi="lollipop">

        <TextView
            android:id="@+id/date_text_remainder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="@string/date"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/date_remainder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_layout"
        android:layout_margin="16dp"
        android:background="@drawable/mylibrary_bg"
        android:elevation="8dp"
        android:padding="4dp"
        android:weightSum="2"
        tools:targetApi="lollipop">

        <TextView
            android:id="@+id/time_text_remainder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Time"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/time_remainder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:textSize="16sp" />

    </LinearLayout>


    <Button
        android:id="@+id/save_remainder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_bg"
        android:text="Save"
        android:textAllCaps="false"/>

    <include layout="@layout/snippet_update_delete" />

</RelativeLayout>
